# NCCU 機房監控系統 - 優化版環境變數設定

# SMTP 郵件設定
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
ALERT_TO=admin@nccu.edu.tw

# 效能優化參數
BUFFER_SIZE=15              # 影像緩衝區大小 (減少記憶體使用)
CAP_INTERVAL=10             # 擷取間隔秒數 (增加間隔節省資源)
IMAGE_QUALITY=75            # JPEG 品質 1-100 (降低檔案大小)
ALERT_COOLDOWN=300          # 警報冷卻時間(秒) 防止重複警報

# ROI 設定 (感興趣區域)
ROI_X=100
ROI_Y=80
ROI_WIDTH=200
ROI_HEIGHT=150

# 儲存空間管理
MAX_STORAGE_GB=1.0          # 最大儲存空間 (GB)
MAX_AGE_DAYS=7              # 檔案保留天數
LOG_LEVEL=INFO              # 日誌等級
MAX_LOG_SIZE=10MB           # 單個日誌檔案最大大小

# 系統資源限制
MAX_MEMORY_MB=256           # 最大記憶體使用 (MB)
MAX_CPU_PERCENT=80          # 最大 CPU 使用率

# 進階設定
FRAME_SKIP=1                # 跳過幀數 (1=不跳過)
CLEANUP_INTERVAL=3600       # 清理間隔 (秒)
PERFORMANCE_REPORT_INTERVAL=300  # 效能報告間隔 (秒)